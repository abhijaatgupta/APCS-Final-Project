/**
 * Abstract class to set a template to make a ship Two boolean variables to
 * check if the ship is hit or sunk
 *
 */
public abstract class Ship {
	private boolean isDamaged;
	private boolean isAlive;

	/**
	 * Constructor to ship class
	 */

	public Ship() {

	}

	/**
	 * Method to see if the ship is hit
	 * 
	 * @return true if hit, false if not
	 */
	public abstract boolean isDamaged();

	/**
	 * Method to see if a ship has sunk
	 * 
	 * @return true if sunk, false if not
	 */
	public abstract boolean isAlive();

}
